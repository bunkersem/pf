  "dependencies": {
    "angular": "^1.6.6",
    "angular-sanitize": "^1.6.5",
    "modernizr": "^3.5.0",
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "copy": "^0.3.1",
    "css-loader": "^0.28.7",
    "modernizr-webpack-plugin": "^1.0.6",
    "node-sass": "^4.6.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "ts-loader": "^2.3.3",
    "typescript": "^2.4.2",
    "webpack": "^3.8.1"
  }
}
